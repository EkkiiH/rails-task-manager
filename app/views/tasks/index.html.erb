<h1>List of tasks</h1>

<% @tasks.each do |task| %>
  <li>
    <input type="checkbox" name="">
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
<% end %>

